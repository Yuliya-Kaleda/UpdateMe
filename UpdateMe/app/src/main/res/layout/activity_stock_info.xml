<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b6b6b6"
    android:padding="6dp"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="#C8E6C9"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/companyNameTextView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="@string/stock_company_name"
                style="@style/title"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="#4CAF50" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="13"
                android:alignmentMode="alignBounds"
                android:background="#C8E6C9"
                android:padding="10dp"
                android:useDefaultMargins="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/last_trade_price_only"
                    android:id="@+id/lastTradePriceTextView"
                    android:textColor="#388E3C"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/changeTextView"
                    android:text="@string/change"
                    android:textColor="#388E3C"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/daysHighTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stock_days_high"
                    android:textSize="20sp"
                    android:textColor="#388E3C"
                    android:gravity="center_vertical"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stock_days_low"
                    android:id="@+id/daysLowTextView"
                    android:textSize="20sp"
                    android:textColor="#388E3C"
                    android:gravity="center_vertical"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/yearHighTextView"
                    android:text="@string/stock_year_high"
                    android:textSize="20sp"
                    android:textColor="#388E3C"
                    android:gravity="center_vertical"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stock_year_low"
                    android:id="@+id/yearLowTextView"
                    android:textSize="20sp"
                    android:textColor="#388E3C"
                    android:gravity="center_vertical"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/daysRangeTextView"
                    android:text="@string/days_range"
                    android:textSize="20sp"
                    android:textColor="#388E3C"
                    android:gravity="center_vertical"
                    android:padding="5dp"/>

                <Button
                    android:id="@+id/moreInfoButton"
                    android:layout_marginTop="20dp"
                    android:text="More Info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="#4CAF50"
                    android:textColor="#fff"
                    android:padding="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>